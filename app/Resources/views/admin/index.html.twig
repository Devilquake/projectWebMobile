{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="well well-sm">
            <h1>Admin Control</h1>
            <h2>All users</h2>
            <a href="#" class="btn btn-success" role="button">Create user</a>
        </div>
        <table class="table table-condensed">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th></th>
                <th></th>
            </tr>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td><a href="{{ path('user_read', {'id': user.id}) }}" class="btn btn-sm btn-info" role="button">Read</a></td>
                    <td><a href="#" class="btn btn-sm btn-danger" role="button">Delete</a></td>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}